{
    "name": "cyjs",
    "version": "0.4.0",
    "description": "A simple C-c C-v tool in command line.",
    "files": [
        "bin",
        "lib"
    ],
    "bin": {
        "cy": "bin/cy.js"
    },
    "scripts": {
        "build": "babel src -d lib --extensions \".ts\"",
        "clean": "rimraf lib",
        "lint": "eslint --fix src/**/*.ts",
        "prepare": "husky install",
        "prepublishOnly": "npm run tsc && npm run clean && npm run build",
        "release": "standard-version",
        "start": "babel -w src -d lib --extensions \".ts\"",
        "tsc": "tsc --noEmit"
    },
    "author": "yytcjcy@gmail.com",
    "license": "MIT",
    "dependencies": {
        "cac": "5.0.16",
        "chalk": "4.1.2",
        "fs-extra": "10.0.0"
    },
    "devDependencies": {
        "@babel/cli": "7.16.0",
        "@babel/core": "7.16.5",
        "@babel/eslint-parser": "7.16.5",
        "@babel/eslint-plugin": "7.16.5",
        "@babel/preset-env": "7.16.5",
        "@babel/preset-typescript": "7.16.5",
        "@commitlint/cli": "13.2.1",
        "@commitlint/config-conventional": "13.2.0",
        "@ecomfe/eslint-config": "7.3.0",
        "@types/fs-extra": "9.0.13",
        "@types/node": "16.11.14",
        "@typescript-eslint/eslint-plugin": "5.7.0",
        "@typescript-eslint/parser": "5.7.0",
        "babel-plugin-transform-class-properties": "6.24.1",
        "eslint": "8.4.1",
        "husky": "7.0.4",
        "lint-staged": "11.2.6",
        "rimraf": "3.0.2",
        "standard-version": "9.3.2",
        "typescript": "4.5.4"
    }
}
