{
    "name": "cyjs",
    "version": "0.4.0",
    "description": "A simple C-c C-v tool in command line.",
    "files": [
        "bin",
        "lib"
    ],
    "bin": {
        "cy": "bin/cy.js"
    },
    "scripts": {
        "start": "babel -w src -d lib --extensions \".ts\"",
        "build": "babel src -d lib --extensions \".ts\"",
        "clean": "rimraf lib",
        "prepublishOnly": "npm run tsc && npm run clean && npm run build",
        "prepare": "husky install",
        "release": "standard-version",
        "tsc": "tsc --noEmit"
    },
    "author": "yytcjcy@gmail.com",
    "license": "MIT",
    "dependencies": {
        "cac": "5",
        "chalk": "^4.0.0",
        "fs-extra": "^9.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/eslint-parser": "^7.13.10",
        "@babel/eslint-plugin": "^7.13.10",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-typescript": "^7.13.0",
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "@ecomfe/eslint-config": "^7.0.0",
        "@types/fs-extra": "^9.0.8",
        "@types/node": "^14.14.35",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "eslint": "^7.22.0",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "rimraf": "^3.0.2",
        "standard-version": "^9.1.1",
        "typescript": "^4.2.3"
    }
}
